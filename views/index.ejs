</head>

<body>
    <div class="cont">
        <h1>language translator</h1>
        <form action="/" method="post">
            <label for="text">english to bangla</label>
            <input type="text" name="text" id=""> <br>
            <input type="submit" value="submit">
        </form>
        <p>
            <%= translatedText %>
        </p>
    </div>

    <!-- js cdn -->
